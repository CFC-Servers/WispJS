{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",

    "outDir": "./dist/",
    "declaration": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext"
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}

